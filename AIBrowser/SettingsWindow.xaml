<Window x:Class="AIBrowser.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="640" Width="860"
        Icon="AIBrowser.ico"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PageBg}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部设置项 -->
        <Border Grid.Row="0" Background="{DynamicResource TopbarBg}" CornerRadius="12" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="设置" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TopbarText}"/>
                    <TextBlock Text="管理标签页、主题、开机启动" Margin="0,6,0,0" Foreground="{DynamicResource TopbarText}" Opacity="0.75"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="主题" Foreground="{DynamicResource TopbarText}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="ThemeCombo" Width="120" VerticalAlignment="Center">
                        <ComboBoxItem Content="深色" Tag="Dark"/>
                        <ComboBoxItem Content="浅色" Tag="Light"/>
                        <ComboBoxItem Content="跟随系统" Tag="System"/>
                    </ComboBox>

                    <CheckBox x:Name="StartOnBootCheck"
                              Content="开机启动"
                              Foreground="{DynamicResource TopbarText}"
                              Margin="16,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 网站列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Button Content="＋ 新增网站" Height="38" Click="AddTab_Click" Margin="0,0,0,12"/>

                <ListBox x:Name="TabsList" BorderThickness="0" Background="Transparent"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,12"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource TopbarBg}" CornerRadius="12" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 图标占位（后面换缓存图标） -->
                                    <Border Width="44" Height="44" CornerRadius="12"
        Background="{DynamicResource IconBg}"
        VerticalAlignment="Top">
                                        <Image Source="{Binding IconPath, TargetNullValue={x:Null}}" 
           Stretch="UniformToFill" 
           Margin="8"
           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>

                                    <!-- 名称 + URL -->
                                    <StackPanel Grid.Column="1" Margin="12,0,12,0">
                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="30" Margin="0,0,0,8"
                                                 VerticalContentAlignment="Center"/>
                                        <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="30"
                                                 VerticalContentAlignment="Center"/>
                                    </StackPanel>

                                    <!-- 右侧操作 -->
                                    <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
                                        <CheckBox Content="启用" IsChecked="{Binding Enabled}" Margin="0,0,0,8"
                                                  Foreground="{DynamicResource TopbarText}"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="上移" Padding="10,4" Click="MoveUp_Click" Margin="0,0,8,0"/>
                                            <Button Content="下移" Padding="10,4" Click="MoveDown_Click"/>
                                        </StackPanel>
                                        <Button Content="删除" Padding="10,4" Margin="0,10,0,0" Click="Delete_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="关于" Width="90" Height="34" Click="About_Click"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="重置默认" Width="90" Height="34" Click="ResetDefaults_Click" Margin="0,0,10,0"/>
                <Button Content="清缓存" Width="90" Height="34" Click="ClearCacheBtn_Click" Margin="0,0,10,0"/>
                <Button Content="保存" Width="90" Height="34" Click="Save_Click" Margin="0,0,10,0"/>
                <Button Content="取消" Width="90" Height="34" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
