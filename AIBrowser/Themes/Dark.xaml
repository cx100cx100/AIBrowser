<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AccentColor">#4F8CFF</Color>
    <SolidColorBrush x:Key="Accent" Color="{StaticResource AccentColor}"/>

    <SolidColorBrush x:Key="SidebarBg" Color="#0F172A"/>
    <SolidColorBrush x:Key="SidebarText" Color="#E5E7EB"/>

    <SolidColorBrush x:Key="TabItemBg" Color="#111827"/>
    <SolidColorBrush x:Key="TabItemBorder" Color="#1F2937"/>
    <SolidColorBrush x:Key="TabItemHoverBorder" Color="#334155"/>

    <SolidColorBrush x:Key="IconBg" Color="#1F2937"/>

    <SolidColorBrush x:Key="TopbarBg" Color="#0B1220"/>
    <SolidColorBrush x:Key="TopbarText" Color="#E5E7EB"/>

    <SolidColorBrush x:Key="PageBg" Color="#0B1220"/>

    <SolidColorBrush x:Key="ControlBg" Color="#1F2937"/>
    <SolidColorBrush x:Key="ControlText" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="ControlBorder" Color="#374151"/> 
</ResourceDictionary>
